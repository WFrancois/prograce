{% extends 'components/base.html.twig' %}

{% block content %}
    <div class="container">
        <h1>Register to the notification</h1>
        <div class="clearfix">
            <button type="button" class="btn btn-outline-light js--switch-advanced float-right">Advanced</button>
        </div>
        <div class="rounded border border-dark form-group" style="margin: 1rem 0;">
            <div class="row justify-content-lg-center">
                <label for="staticEmail" class="col-sm-2 col-form-label">World</label>
                <div class="col-sm-10 col-lg-2">
                    <input type="text" class="form-control" readonly id="staticEmail" value="3">
                </div>
            </div>
        </div>
        <div style="margin:auto;">
            <button class="btn btn-success js--submit-button d-block mx-auto" disabled>
                Subscribe
            </button>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="application/javascript" src="/js/register.js"></script>
{% endblock %}

{% block stylesheets %}
    <style>
        html, body {
            height: 100%;
        }

        .btn-success {
            background-color: #7fd81e;
            border-color: #7fd81e;
        }
    </style>
{% endblock %}